rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read,create, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create new chat documents in their own "chats" subcollection
    match /users/{userId}/chats/{document} {
      allow create: if request.auth != null
                    && request.auth.token.email == request.resource.data.userId
                    && request.resource.data.createdAt != null;
    }
  }
}
